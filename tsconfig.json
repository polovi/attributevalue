{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "sourceMap": false,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "strictNullChecks": false,
    "rootDir": "src",
    "outDir": "lib"
  },
  "exclude": ["src/**/*.test.ts", "node_modules"]
}
